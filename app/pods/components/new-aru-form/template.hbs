<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group {{if errors.location "has-error"}}">
            <label for="location" class="col-lg-2 control-label">Hely</label>
            <div class="col-lg-10">
                <input class="form-control" id="location" name="location" placeholder=" - add meg az áru helyét! -" type="text" value="{{data.location}}">
                <span class="help-block">{{errors.location}}</span>
            </div>
        </div>
        <div class="form-group {{if errors.description "has-error"}}">
            <label for="description" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <input class="form-control" id="description" name="description" placeholder=" - add meg az áru nevét/leírását! -" type="text" value="{{data.description}}">
                <span class="help-block">{{errors.description}}</span>
            </div>
        </div>
        <div class="form-group {{if errors.raktar "has-error"}}">
            <label for="raktar" class="col-lg-2 control-label">Raktár</label>
            <div class="col-lg-10">
                <select id="raktar">
                    {{#each raktarak}}
                        <option value={{nev}}>{{nev}}</option>
                    {{/each}}
                </select>
                <span class="help-block">{{errors.raktar}}</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Törlés</button>
                <button {{action "submit"}} class="btn btn-primary">Küldés</button>
            </div>
        </div>
    </fieldset>
</form>        